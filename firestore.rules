rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /apikey/{docId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.token.email == "haydenstewart14@gmail.com";
    }

    match /habits/{docId} {
      
      allow create: if request.resource.data.email != null
                    && request.resource.data.authenticated == true;

      allow read, update, delete: if request.resource != null 
                                  && request.resource.data.email == resource.data.email
                                  && resource.data.authenticated == true;
    }
  }
}
